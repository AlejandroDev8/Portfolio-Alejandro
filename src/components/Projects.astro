---
import { db } from '@/data/database.ts';
---

<section id="project" class="py-20 px-4">
  <h2 class="text-4xl text-center mb-12">Proyectos</h2>
  <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6 max-w-[1200px] mx-auto text-wrap">
    {db.map(project => (
      <div class="bg-card-bg rounded-2xl p-6 hover:-translate-y-2 transition-transform">
        <h3 class="text-xl text-text-accent mb-2">{project.name}</h3>
        <p class="text-gray-300 mb-4">{project.description}</p>
        <div class="flex flex-wrap gap-2 mb-4">
          {project.technologies.map(tech => (
            <span class="text-xs px-3 py-1 rounded-full bg-text-accent/10 text-text-accent">{tech}</span>
          ))}
        </div>
        <div class="flex gap-4">
          {project.links.map(link => (
            <a href={link} class="text-gray-400 hover:text-text-accent transition-colors text-xl" target="_blank">
              <i class={link.includes('github') ? 'fab fa-github' : 'fas fa-external-link-alt'}></i>
            </a>
          ))}
        </div>
      </div>
    ))}
  </div>
</section>
